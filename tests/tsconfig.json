{
  "extends": "@rslib/tsconfig/base",
  "compilerOptions": {
    "noEmit": true,
    "composite": true,
    "allowJs": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "e2e/**/*.ts",
    "integration/**/**.test.ts",
    "integration/**/rslib.config.ts",
    "integration/**/rslib.config.js",
    "benchmark/**/*.ts",
    "playwright.config.ts"
  ],
  "exclude": ["**/node_modules", "**/.*/"],
  "references": [
    {
      "path": "../packages/core"
    }
  ]
}
