    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@rslib/tsconfig": "workspace:*",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
