{
  "name": "create-rslib",
  "version": "0.4.0",
  "description": "Create a new Rslib project",
  "homepage": "https://lib.rsbuild.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-infra-dev/rslib.git",
    "directory": "packages/create-rslib"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "bin": {
    "create-rslib": "./dist/index.js"
  },
  "files": [
    "template-*",
    "dist"
  ],
  "scripts": {
    "build": "rslib build && pnpm generate-templates",
    "dev": "rslib build --watch",
    "generate-templates": "pnpm tsx ./src/genTemplates.ts",
    "start": "node ./dist/index.js",
    "test": "vitest run"
  },
  "dependencies": {
    "create-rstack": "1.1.0"
  },
  "devDependencies": {
    "@rslib/tsconfig": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.8.1",
    "fs-extra": "^11.3.0",
    "rsbuild-plugin-publint": "^0.3.0",
    "rslib": "npm:@rslib/core@0.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=16.7.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  }
}
