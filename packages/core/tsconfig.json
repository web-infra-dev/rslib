{
  "extends": "@rslib/tsconfig/base",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist-types",
    "isolatedDeclarations": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "commander": ["./compiled/commander"],
      "picocolors": ["./compiled/picocolors"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules"],
  "references": [
    {
      "path": "../plugin-dts"
    }
  ]
}
